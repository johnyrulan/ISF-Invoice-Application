@{
    ViewBag.Title = "Create Invoice";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p style="color:orange">
    @ViewBag.Message
</p>

<form method="POST" action="/invoice/createinvoice">
    @Html.AntiForgeryToken()
    <label>Name: </label><input type="text" name="name" />
    <br /><br />
    <label>Quantity (as Integer): </label><input type="text" name="quantity" />
    <br /><br />
    <label>Price (as Integer): </label><input type="text" name="price" />
    <br /><br />
    <input type="submit" value="Submit" />
</form>
<br />
<a href="/invoice/getinvoices">See all invoices</a>
